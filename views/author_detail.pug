extends layout 

block content 

  h1 Author: #{author.name}
  p #{author.formatted_dob} - #{author.formatted_dod}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books 

    dl 
      each book in booksByAuthor 
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      esle 
        p This author has no books 